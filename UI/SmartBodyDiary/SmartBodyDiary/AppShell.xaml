<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SmartBodyDiary.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:SmartBodyDiary.Views"
    xmlns:local="clr-namespace:SmartBodyDiary">

    <TabBar>
        <ShellContent
            Title="Main"
            Icon="iconblank.png"
            ContentTemplate="{DataTemplate views:MainPage}" />
        <ShellContent
            Title="ListDetail"
            Icon="iconlistdetail.png"
            ContentTemplate="{DataTemplate views:ListDetailPage}" />
        <ShellContent
            Title="Localization"
            Icon="iconlocalization.png"
            ContentTemplate="{DataTemplate views:LocalizationPage}" />
    </TabBar>
</Shell>
